# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!
# isto é um teste

general {
        colors = true
        interval = 1
	markup = "pango"
}

order += "ipv6"
# order += "run_watch DHCP"
order += "run_watch SSH"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "disk /"
# order += "load"
order += "cpu_usage"
order += "memory"
order += "volume master"
order += "tztime local"

run_watch DHCP {
	pidfile = "/var/run/dhcpclient*.pid"
}

run_watch SSH {
	pidfile = "/var/run/sshd*.pid"
}

wireless _first_ {
format_up = "󰒢 W: (%quality at %essid ) %ip"
        format_down = "󰞃 W: down"
}

ethernet _first_ {
        format_up = "󰛳 E: %ip (%speed)"
        format_down = "󰲛 E: down"
}

battery all {
        format = "󰁹 %status %percentage %remaining"
	last_full_capacity = true
}

disk "/" {
        format = "<span color='#926D2A'> %avail</span>"
}

load {
        format = " %1min"
}
cpu_usage{
	format = "<span color='#34A971'> %usage</span>"
	max_threshold = 75
	format_above_threshold = " %usage"
}

memory {
        format = "<span color='#7393B3'> %used / %total</span>"
        threshold_degraded = "5G"
        format_degraded = "MEMORY < %available"
}

volume master {
	format = "󰓃 %volume %devicename"
	format_muted = "󰓄 muted %devicename"
	device = "default"
	mixer = "master"
	mixer_idx = 0
	# color_separator = "#C7A144"
}

tztime local {
        format = " : %d-%m-%Y %H:%M:%S"
}
